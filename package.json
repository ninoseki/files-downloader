{
  "name": "files-downloader",
  "displayName": "Files Downloader",
  "version": "0.1.0",
  "description": "A web extension to download files via your active tab",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build"
  },
  "dependencies": {
    "bulma": "^0.9.4",
    "is-url": "^1.2.4",
    "plasmo": "^0.51.0",
    "sleep-promise": "^9.1.0",
    "vue": "3.2.37"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "^1.2.0",
    "@types/chrome": "0.0.193",
    "@types/is-url": "^1.2.30",
    "@types/node": "18.7.2",
    "prettier": "2.7.1",
    "typescript": "4.7.4"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "downloads",
      "tabs"
    ]
  }
}
